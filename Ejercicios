 /*pedir al usuario 10 letras, estas letras se guardan en un vector, despues decir al 
        usuario cuales de las letras con (a)*/

package calculadora.de.letras;
import java.util.*;

public class CalculadoraDeLetras {

    
    public static void main(String[] args) {
        String[] letra = new String[10];
        Scanner lector = new Scanner(System.in);
        Integer cantidad = 0;
        
        for(int n=0; n<10; n++)
        {
            System.out.println("Digite letra");
            letra[n] = lector.next();
            
            if(letra[n].compareTo("a")==0){
                cantidad = cantidad + 1;
            }
        }
        System.out.println("Usted digito = "+cantidad+" (a)");
    }
    
}



